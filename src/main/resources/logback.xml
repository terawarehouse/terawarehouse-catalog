<!-- https://github.com/spring-projects/spring-boot/blob/master/spring-boot-project/spring-boot/src/main/resources/org/springframework/boot/logging/logback/base.xml -->
<configuration>
	<include
		resource="org/springframework/boot/logging/logback/base.xml" />
	<logger name="com.broodcamp" level="DEBUG" additivity="false">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE" />
	</logger>
	<logger name="com.terawarehouse" level="DEBUG"
		additivity="false">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE" />
	</logger>
	<logger
		name="io.swagger.models.parameters.AbstractSerializableParameter"
		level="ERROR" />
	<root level="error">
		<appender-ref ref="CONSOLE" />
	</root>
</configuration>